<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Cards</title>
    <link rel="stylesheet" href="/styles/card.css">
</head>
<body>
    <!-- Include Header -->
    <%- include("header") %>

    <div class="main">
        <% if (coupons.length === 0) { %>
            <center><h1>No Coupons Available</h1></center>
        <% } else { %>
            <% coupons.forEach(coupon => { %>
                <a href="/checkOut?id=<%= coupon.cid %>">
                    <div class="cards">
                        <div class="image">
                            <img src="/photo/<%= coupon.jpg %>" alt="<%= coupon.title %>">
                        </div>
                        <div class="title">
                            <h2><%= coupon.title %></h2>
                        </div>
                        <div class="desc">
                            <p><%= coupon.tc %></p>
                        </div>
                    </div>
                </a>
            <% }); %>
        <% } %>
    </div>

    <!-- Include Footer -->
    <%- include("footer") %>
</body>
</html>
